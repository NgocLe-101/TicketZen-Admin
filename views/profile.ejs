<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-6">
      <h1 class="text-2xl font-bold mb-6">Update Your Profile</h1>

      <!-- Profile Update Form -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <form id="profile-form" action="/profile" method="POST">
          <!-- Name Field -->
          <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-700"
              >Username</label
            >
            <input
              type="text"
              id="name"
              name="username"
              value="<%= admin.username %>"
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md"
              required
            />
          </div>

          <!-- Email Field -->
          <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-700"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              value="<%= admin.email %>"
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md"
              required
            />
          </div>

          <!-- Password Field (optional) -->
          <div class="mb-4">
            <label
              for="password"
              class="block text-sm font-medium text-gray-700"
              >New Password (optional)</label
            >
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Leave blank to keep current password"
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md"
            />
          </div>

          <div class="flex justify-end">
            <button
              type="button"
              class="text-blue-500 px-6 py-2 mr-2"
              onclick="window.history.back()"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="bg-blue-500 text-white px-6 py-2 rounded-md"
            >
              Update Profile
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      // Handle form submission and show feedback
      document
        .getElementById("profile-form")
        .addEventListener("submit", function (e) {
          e.preventDefault();
          const formData = new FormData(e.target);

          axios
            .put("/profile", Object.fromEntries(formData))
            .then((response) => {
              console.log(response);
              alert("Profile updated successfully!");
            })
            .catch((error) => {
              alert("An error occurred. Please try again.");
            });
        });
    </script>
  </body>
</html>
